{
  "info": {
    "name": "Basic Express Server - Examples",
    "_postman_id": "0000-0000-0000-0000",
    "description": "Minimal collection with login, create user and create todo",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password\"\n}"
        },
        "url": { "raw": "http://localhost:5000/auth/login", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["auth","login"] }
      }
    },
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret\",\n  \"role\": \"user\",\n  \"age\": 30\n}"
        },
        "url": { "raw": "http://localhost:5000/users", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["users"] }
      }
    },
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer <JWT_TOKEN>" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 1,\n  \"title\": \"Buy milk\"\n}"
        },
        "url": { "raw": "http://localhost:5000/todos", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["todos"] }
      }
    }
  ]
}
